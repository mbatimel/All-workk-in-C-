<Window x:Class="Example_1012.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_1012"
        mc:Ignorable="d"
        Title="Action" Height="200" Width="300">
    <Grid>
        <Rectangle x:Name="rect"
                   Margin="20"
                   Fill="Red" 
                   MouseDown="Rect_MouseDown" 
                   MouseUp="Rect_MouseUp" 
                   MouseEnter="Rect_MouseEnter" 
                   MouseLeave="Rect_MouseLeave"
                   
                />
    </Grid>
</Window>
