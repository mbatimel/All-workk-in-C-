<Window x:Class="Example_1011.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_1011"
        mc:Ignorable="d"
        Title="Второе приложение WPF" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtName"
                 Grid.Row="0"
                 Width="200"
                 TextAlignment="Center"
                 Height="30"
                 Background="Aqua"
                 FontSize="20"
                 TextWrapping="Wrap"
                 />

        <Button Width="200"
                Height="50"
                Content="Кнопка"
                FontSize="20"
                Grid.Row="1" 
                Click="Button_Click"
                
                />



    </Grid>
</Window>
